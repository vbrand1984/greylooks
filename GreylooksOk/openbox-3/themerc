!! Menu and window label text justification
*.text.justify: center

!! {{{ General window settings

!! Window border
border.width:									1
window.active.border.color:						#656261
window.inactive.border.color:					#7a7774

!! Padding between window borders and insides
window.client.padding.width:					0
window.client.padding.height:					0

!! Padding between window title elements
padding.width:									4
padding.height:									3

!! Handle and grip
window.handle.width:							3
window.*.handle.bg:								raised solid
window.*.handle.bg.highlight:					32
window.*.handle.bg.shadow:						8
window.*.handle.bg.color:						#d9d6cf
window.*.grip.bg:								parentrelative

!! }}}
!! {{{ Active window title

!! Title background
window.active.title.bg:							raised gradient splitvertical
window.active.title.bg.color.splitTo:			#86979e
window.active.title.bg.color:					#7a8b91
window.active.title.bg.colorTo:					#78888e
window.active.title.bg.colorTo.splitTo:			#748389
window.active.title.bg.highlight:				64 
window.active.title.bg.shadow:					32

!! Separator color
window.active.title.separator.color:			#667378

!! Label background and text
window.*.label.bg:								parentrelative
window.active.label.text.color:					#f0ede5
window.active.label.text.font:					shadow=y:shadowoffset=1:shadowtint=70

!! }}}
!! {{{ Inactive window title

!! Title background
